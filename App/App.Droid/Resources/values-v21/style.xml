    <item name="android:seekBarStyle">@style/SeekBarTdmTheme</item>

    <item name="android:ratingBarStyle">@style/RatingBarTdmTheme</item>

    <item name="android:ratingBarStyleIndicator">@style/RatingBarBigTdmTheme</item>

    <item name="android:ratingBarStyleSmall">@style/RatingBarSmallTdmTheme</item>

