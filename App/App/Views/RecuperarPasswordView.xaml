<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.RecuperarPasswordView">
  <StackLayout Spacing="20" Padding="20"
                        VerticalOptions="Center">
    <Entry Placeholder="Username"
           x:Name="txtUsuario"/>
    <Entry Placeholder="Password"
           x:Name="txtPassword"
           IsPassword="true"/>
    
    
    <Button Text="Ingresar" Clicked="btnIngresarClicked" x:Name="btnLogin"/>
    <Button Text="Crear cuenta" Clicked="btnCrearCuentaClicked"/>
    <Button Text="Recuperar clave" Clicked="btnRecuperarClaveClicked"/>
  </StackLayout>
</ContentPage>